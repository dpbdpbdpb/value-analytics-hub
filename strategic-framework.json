  "decisions": [
    {
      "id": "hip-knee-vendor-strategy-2025",
      "name": "Hip & Knee Vendor Strategy",
      "initiativeId": "ortho-value-transformation",
      "categoryId": "vendor-selection",
      "description": "Strategic vendor consolidation for hip and knee joint replacements",
      "decisionDate": "2025-Q2",
      "status": "evaluation",
      "committee": {
        "members": ["Finance Leadership", "Clinical Leadership", "Operations Leadership"],
        "decisionRule": "Consensus required - no veto power"
      },
      "currentScenario": "hip-knee-scenarios",
      "assumptions": [
        {
          "id": "fin-1",
          "pillar": "finance",
          "assumption": "Vendor consolidation will yield 18-25% cost savings",
          "confidence": "high",
          "validationMetrics": ["actual-spend-reduction", "contract-compliance"],
          "validationFrequency": "quarterly",
          "owner": "CFO Office"
        },
        {
          "id": "fin-2",
          "pillar": "finance",
          "assumption": "Implementation costs will be recovered within 18 months",
          "confidence": "medium",
          "validationMetrics": ["npv-tracking", "actual-implementation-cost"],
          "validationFrequency": "quarterly",
          "owner": "CFO Office"
        },
        {
          "id": "clin-1",
          "pillar": "clinical",
          "assumption": "85% of surgeons will adopt new vendor landscape with proper engagement",
          "confidence": "medium",
          "validationMetrics": ["surgeon-adoption-rate", "surgeon-satisfaction"],
          "validationFrequency": "monthly",
          "owner": "CMO Office"
        },
        {
          "id": "clin-2",
          "pillar": "clinical",
          "assumption": "Patient outcomes will remain stable or improve with vendor consolidation",
          "confidence": "high",
          "validationMetrics": ["revision-rates", "patient-satisfaction", "readmission-rates"],
          "validationFrequency": "quarterly",
          "owner": "CMO Office"
        },
        {
          "id": "ops-1",
          "pillar": "operations",
          "assumption": "Implementation can be completed within 12 months",
          "confidence": "medium",
          "validationMetrics": ["milestone-completion", "timeline-variance"],
          "validationFrequency": "monthly",
          "owner": "COO Office"
        },
        {
          "id": "ops-2",
          "pillar": "operations",
          "assumption": "Supply chain complexity will decrease with fewer vendors",
          "confidence": "high",
          "validationMetrics": ["inventory-turns", "stockout-incidents", "vendor-coordination-time"],
          "validationFrequency": "quarterly",
          "owner": "COO Office"
        }
      ],
      "lookbacks": []
    }
